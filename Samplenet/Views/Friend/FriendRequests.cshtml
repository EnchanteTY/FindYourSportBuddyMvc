@model IEnumerable<FindYourSportBuddy.BL.Entities.FriendRequest>

<h2>Pending Friend Requests</h2>




@if (Model.Count() > 0)
{
    
    foreach (var item in Model)
    {
        <div>
            <span>
                <a href="@Url.Action("Index", "UserProfile", new { userName = @item.Requester.UserName })">
                    @item.Requester.UserName
                </a>
            </span>
            <span>
                <button data-friend-id="@item.RequesterId"
                        class="btn default js-add-friend acceptFriend btn-sm">
                    Accept
                </button>
            </span>
        </div>
    }

}


